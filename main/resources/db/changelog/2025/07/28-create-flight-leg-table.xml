<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="create_flight_leg_table" author="vstkachenko">
        <createTable tableName="flight_leg">
            <column name="duration_minutes" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="flight_id" type="UUID"/>
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_flight_leg_flight_id__flight"
                baseTableName="flight_leg"
                baseColumnNames="flight_id"
                referencedTableName="flight"
                referencedColumnNames="id"
        />
    </changeSet>
</databaseChangeLog>