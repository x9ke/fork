<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="create_orders_table" author="vstkachenko">
        <createTable tableName="orders">
            <column name="created_by" type="TEXT"/>
            <column name="modified_by" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP(6) WITH TIME ZONE"/>
            <column name="modified_at" type="TIMESTAMP(6) WITH TIME ZONE"/>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_uid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="order_status">
                <constraints nullable="false"/>
            </column>
            <column name="files" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="traveler_uids" type="UUID[]">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>